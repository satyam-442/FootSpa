<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!--<TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25sp">

        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Hello, "
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text=""
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/helloText"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/spa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Get Set SPA"
            android:textColor="@color/purple_700"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/helloText"
            app:layout_constraintTop_toBottomOf="@+id/helloText" />

        <TextView
            android:id="@+id/serviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/sofia"
            android:text="Let's Explore"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/helloText"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/serviceText"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hairCareTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hair_care"
                        android:paddingStart="10dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/facialTreatmentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="FACIAL TREATMENT"
                        android:paddingStart="10dp"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="10dp"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/antiAgingTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="ANTI-AGING TREATMENT"
                        android:paddingStart="10dp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eyeTreatmentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="EYE TREATMENT"
                        android:paddingStart="10dp"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="10dp"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bodyMassageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="BODY MASSAGE"
                        android:paddingStart="10dp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/makeUpTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="MAKEUP SERVICES"
                        android:paddingStart="10dp"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="10dp"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/waxingTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="WAXING"
                        android:paddingStart="10dp"
                        android:gravity="start|center_vertical"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="9dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceText"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nailCareTextView"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="NAIL CARE"
                        android:paddingStart="10dp"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="10dp"
                        android:fontFamily="serif"
                        android:textSize="19sp"
                        android:letterSpacing="0.1"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>